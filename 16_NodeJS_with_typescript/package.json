{
   "name": "express-ts-api-starter",
   "version": "1.0.0",
   "description": "A basic starter for an express.js v5 API with Typescript",
   "author": "Soumadip Majila",
   "license": "MIT",
   "keywords": [
      "express",
      "typescript",
      "api",
      "starter",
      "template"
   ],
   "main": "src/server.ts",
   "type": "module",
   "scripts": {
      "start": "node --env-file=.env dist/src/server.js",
      "dev": "tsx watch --env-file=.env src/server.ts",
      "build": "tsc",
      "typecheck": "tsc --noEmit"
   },
   "dependencies": {
      "@types/mongoose": "^5.11.96",
      "cors": "^2.8.5",
      "dotenv": "^17.2.3",
      "express": "^5.1.0",
      "helmet": "^8.1.0",
      "mongoose": "^9.0.2",
      "morgan": "^1.10.1"
   },
   "devDependencies": {
      "@types/cors": "^2.8.19",
      "@types/express": "^5.0.5",
      "@types/morgan": "^1.9.10",
      "@types/node": "^24.9.2",
      "tsx": "^4.20.6",
      "typescript": "^5.9.3"
   }
}
